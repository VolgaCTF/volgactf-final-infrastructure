{
  "name": "development",
  "default_attributes": {
    "firewall": {
      "ubuntu_iptables": true,
      "allow_loopback": true,
      "allow_ssh": true,
      "allow_icmp": true,
      "ipv6_enabled": false
    },
    "latest-nodejs": {
      "install": "lts",
      "binary": true
    },
    "ntp": {
      "servers": [
        "0.pool.ntp.org",
        "1.pool.ntp.org",
        "2.pool.ntp.org",
        "3.pool.ntp.org"
      ]
    },
    "volgactf": {
      "final": {
        "dns": {
          "records": [
            {
              "type": "A",
              "name": "master.final.volgactf",
              "ipv4_address": "172.20.0.2"
            },
            {
              "type": "A",
              "name": "postgres.final.volgactf",
              "ipv4_address": "172.20.0.3"
            },
            {
              "type": "A",
              "name": "redis.final.volgactf",
              "ipv4_address": "172.20.0.4"
            }
          ]
        },
        "postgres": {
          "host": "postgres.final.volgactf"
        },
        "redis": {
          "host": "redis.final.volgactf"
        }
      }
    }
  }
}
