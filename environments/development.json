{
  "name": "development",
  "default_attributes": {
    "firewall": {
      "ubuntu_iptables": true,
      "allow_loopback": true,
      "allow_ssh": true,
      "allow_icmp": true,
      "ipv6_enabled": false
    },
    "latest-nodejs": {
      "install": "lts",
      "binary": true
    },
    "ntp": {
      "servers": [
        "0.pool.ntp.org",
        "1.pool.ntp.org",
        "2.pool.ntp.org",
        "3.pool.ntp.org"
      ]
    },
    "volgactf": {
      "final": {
        "dns": {
          "records": [
            {
              "type": "A",
              "name": "master.final.volgactf",
              "ipv4_address": "172.20.0.2"
            },
            {
              "type": "A",
              "name": "postgres.final.volgactf",
              "ipv4_address": "172.20.0.3"
            },
            {
              "type": "A",
              "name": "redis.final.volgactf",
              "ipv4_address": "172.20.0.4"
            },
            {
              "type": "A",
              "name": "checker1.final.volgactf",
              "ipv4_address": "172.20.0.11"
            }
          ]
        },
        "postgres": {
          "host": "postgres.final.volgactf"
        },
        "redis": {
          "host": "redis.final.volgactf"
        },
        "master": {
          "fqdn": "master.final.volgactf"
        },
        "checker": {
          "allow_access_from": [
            "172.20.0.2/32"
          ]
        },
        "config": {
          "internal_networks": [
            "172.20.0.0/24"
          ],
          "api_req_limits": {
            "flag_info": {
              "rate": "10r/s",
              "burst": 5,
              "nodelay": true
            },
            "flag_submit": {
              "rate": "5r/s",
              "burst": 5,
              "nodelay": true
            }
          },
          "competition": {
            "title": "VolgaCTF Final"
          },
          "settings": {
            "flag_lifetime": 360,
            "round_timespan": 120,
            "poll_timespan": 35,
            "poll_delay": 40
          },
          "teams": {
            "team1": {
              "name": "team #1",
              "network": "172.20.1.0/24"
            },
            "team2": {
              "name": "team #2",
              "network": "172.20.2.0/24"
            },
            "team3": {
              "name": "team #3",
              "network": "172.20.3.0/24"
            },
            "team4": {
              "name": "team #4",
              "network": "172.20.4.0/24"
            }
          },
          "domain_files": [
            {
              "name": "init-10",
              "type": "competition_init",
              "services": {
                "service1": {
                  "name": "service #1",
                  "hostmask": "0.0.0.3",
                  "checker_endpoint": "http://checker1.final.volgactf",
                  "attack_priority": true
                }
              }
            }
          ]
        }
      }
    }
  }
}
